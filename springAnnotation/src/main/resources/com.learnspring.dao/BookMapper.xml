    <insert id="save">
        insert into tb_type( type_id, type_name)
        values(#{typeId}, #{typeName})
    </insert>
    <update id="update">
        update tb_type
        set type_id  = #{typeId}
          , type_name=#{typeName}
    </update>
    <delete id="delete">
        delete
        from tb_type
        where typeId = #{type_id}
    </delete>
    <select id="select">
        select *
        from tb_type
    </select>

</mapper>